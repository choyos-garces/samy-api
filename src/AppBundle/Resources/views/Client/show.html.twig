{% extends 'base.html.twig' %}

{% block title %}Cliente {{ client.name }}{% endblock %}

{% block body %}
    <div class="table-responsive">
        <div>
            <a href="{{ path("client_edit", {name : client.name}) }}" class="btn pull-right">Edit</a>
            <h3>{{ client.name }}</h3>
        </div>
        <hr>
        <table class="table table-striped table-bordered table-docs">
            <tr>
                <th>Client ID</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Secret</th>
                <td><code>{{ client.secret }}</code></td>
            </tr>
            <tr>
                <th>Active</th>
                <td>
                    <strong>
                    {% if client.active %}
                        <code class="bg-success">true</code>
                    {% else %}
                        <code class="bg-danger">false</code>
                    {% endif %}
                    </strong>
                </td>
            </tr>
            <tr>
                <th>Users</th>
                <td>
                    {% for user in client.users %}
                        {{ user.username }}
                    {% endfor %}
                </td>
            </tr>
        </table>
    </div>
{% endblock %}